# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()
GET     /createUser                 controllers.Application.createUser()
POST    /createUser                 controllers.Application.makeNewUser()
GET     /previousRecommendations    controllers.Application.previousRecommendations()
GET     /discoverNew                controllers.Application.discoverNew()
GET     /actorDetail/:actor         controllers.Application.actorDetail(actor:Integer)
GET     /movieDetail/:movie         controllers.Application.movieDetail(movie:Integer)
GET     /continueDiscovering        controllers.Application.continueDiscovering(actor:Integer)
GET     /outOfActors                controllers.Application.outOfActors()
GET     /movieResults               controllers.Application.movieResults()
GET     /respondToMovie             controllers.Application.respondToMovie(movieId:Integer)
GET     /movieChoice                controllers.Application.movieChoice(movieId:Integer)
GET     /removeActor                controllers.Application.actorBackToFavorites(actorId:Integer)
GET     /removeMovie                controllers.Application.movieBackToFavorites(movieId:Integer)